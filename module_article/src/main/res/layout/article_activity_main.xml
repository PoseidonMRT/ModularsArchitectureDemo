<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/article_main_drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:id="@+id/article_main"
            android:orientation="vertical"
            android:background="@color/article_color_f7f7f7"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <RelativeLayout
                android:id="@+id/article_main_top"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
            <ImageView
                    android:id="@+id/article_open_left_drawer_iv"
                    android:layout_width="@dimen/article_dp60"
                    android:src="@drawable/article_vector_drawable_icon_menu"
                    android:layout_height="match_parent"
                    android:padding="@dimen/article_dp10"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"/>

            <ImageView
                    android:id="@+id/article_open_right_drawer_iv"
                    android:layout_width="@dimen/article_dp60"
                    android:src="@drawable/article_vector_drawable_icon_more"
                    android:layout_height="match_parent"
                    android:padding="@dimen/article_dp10"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"/>
        </RelativeLayout>

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="9"
                android:scrollbars="none"
                android:fillViewport="true">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:id="@+id/article_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="书名"
                        android:textAppearance="@style/ArticleTitleTextStyleNormal"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                />
                <View
                        android:id="@+id/article_divider"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/article_dp1"
                        android:layout_marginTop="@dimen/article_dp10"
                        android:layout_marginRight="@dimen/article_dp15"
                        android:layout_marginLeft="@dimen/article_dp15"
                        android:background="@color/article_color_40c8a6"
                        app:layout_constraintTop_toBottomOf="@id/article_title"/>
                <TextView
                        android:id="@+id/article_author"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="作者"
                        android:textAppearance="@style/ArticleAuthorTextStyleNormal"
                        android:layout_marginTop="@dimen/article_dp10"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/article_divider"/>
                <TextView
                        android:id="@+id/article_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="文章内容"
                        android:textAppearance="@style/ArticleContentTextStyleNormal"
                        android:layout_marginTop="@dimen/article_dp10"
                        android:layout_marginRight="@dimen/article_dp15"
                        android:layout_marginLeft="@dimen/article_dp15"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/article_author"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/article_main_drawer_left_layout"
            android:layout_width="@dimen/article_dp150"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@color/article_color_ee000000"
            android:orientation="vertical"
            android:paddingTop="@dimen/article_dp80">

        <TextView
                android:id="@+id/article_main_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:drawableLeft="@drawable/article_vector_drawable_icon_settings"
                android:textColor="@color/article_color_55ffffff"
                android:text="@string/article_reading_settings_str"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/article_main_drawer_right_layout"
            android:layout_width="@dimen/article_dp100"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:orientation="vertical"
            android:background="@color/article_color_ee000000"
            android:divider="@color/article_color_55ffffff"
            android:dividerPadding="@dimen/article_dp1"
            android:showDividers="middle"
            android:paddingTop="@dimen/article_dp80">

        <TextView
                android:id="@+id/article_main_prev"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/article_vector_drawable_icon_prev"
                android:textColor="@color/article_color_55ffffff"
                android:drawablePadding="@dimen/article_dp5"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_margin="@dimen/article_dp5"
                android:text="前一天"/>

        <TextView
                android:id="@+id/article_main_today"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/article_vector_drawable_icon_today"
                android:textColor="@color/article_color_55ffffff"
                android:drawablePadding="@dimen/article_dp5"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_margin="@dimen/article_dp5"
                android:text="今日"/>
        <TextView
                android:id="@+id/article_main_next"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/article_vector_drawable_icon_next"
                android:textColor="@color/article_color_55ffffff"
                android:drawablePadding="@dimen/article_dp5"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_margin="@dimen/article_dp5"
                android:text="后一天"/>
        <TextView
                android:id="@+id/article_main_random"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/article_vector_drawable_icon_random"
                android:textColor="@color/article_color_55ffffff"
                android:drawablePadding="@dimen/article_dp5"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_margin="@dimen/article_dp5"
                android:text="随机"/>
    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>