<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_280dp"
            android:background="@color/colorPrimaryDark"
            app:lottie_autoPlay="true"
            app:lottie_fileName="animation-lottie-splash.json"
            app:lottie_loop="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
    />

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_2dp"
            app:layout_constraintTop_toBottomOf="@id/animation_view"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
    >
        <ImageView
                android:id="@+id/weather_iv"
                android:src="@drawable/vector_drawable_weather_icon"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:padding="10dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/grey_border_radius_circle_rectangle"/>
        <ImageView
                android:id="@+id/news_iv"
                android:src="@drawable/vector_drawable_news_icon"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:padding="10dp"
                android:layout_centerInParent="true"
                android:background="@drawable/grey_border_radius_circle_rectangle"/>
        <ImageView
                android:id="@+id/article_iv"
                android:src="@drawable/vector_drawable_article"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:padding="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/grey_border_radius_circle_rectangle"/>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>